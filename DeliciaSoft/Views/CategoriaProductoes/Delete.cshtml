@model DeliciaSoft.Models.CategoriaProducto

@{
    ViewData["Title"] = "Eliminar Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
            <div>
                <h1 class="fs-4 mb-0">Eliminar Categoría</h1>
                <p class="mb-0 small">¿Está seguro que desea eliminar esta categoría?</p>
            </div>
        </div>
        <div class="card-body pt-4">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NombreCategoria)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreCategoria)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DescripcionProducto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DescripcionProducto)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @if (Model.Estado == true)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="IdCategoriaProducto" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Regresar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Confirmar Eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
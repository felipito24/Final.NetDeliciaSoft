@model DeliciaSoft.Models.Sede

@{
    ViewData["Title"] = "Detalles de Sede";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-store fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Detalles de Sede</h1>
                <p class="mb-0 small">Información completa de la sede</p>
            </div>
        </div>
        <div class="card-body">
            <div class="delicia-details">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Direccion)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefono)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Horarios)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Horarios)</dd>

                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">
                        @if (Model.Estado)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-delicia-outline">
                    <i class="fas fa-arrow-left me-2"></i>Regresar
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.IdSede" class="btn btn-delicia-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>

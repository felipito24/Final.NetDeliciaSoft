@model DeliciaSoft.Models.Compra

@{
    ViewData["Title"] = "Editar compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-edit fa-2x me-3"></i>
            <div>
                <h1 class="fs-4 mb-0">Editar Compra</h1>
                <p class="mb-0 small">Actualice los detalles de la compra realizada</p>
            </div>
        </div>
        <div class="card-body pt-4">
            <form asp-action="Edit" class="delicia-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdCompra" />

                <div class="delicia-section-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-user-tag me-2"></i> Datos del Proveedor
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="IdProveedor" class="form-label">Proveedor</label>
                            <select asp-for="IdProveedor" asp-items="ViewBag.IdProveedor" class="form-select"></select>
                            <span asp-validation-for="IdProveedor" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="delicia-section-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-calendar-alt me-2"></i> Fechas de la Compra
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FechaCompra" class="form-label">Fecha de Compra</label>
                                <input asp-for="FechaCompra" class="form-control" type="date" />
                                <span asp-validation-for="FechaCompra" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaRegistro" class="form-label">Fecha de Registro</label>
                                <input asp-for="FechaRegistro" class="form-control" type="date" />
                                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="delicia-section-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-credit-card me-2"></i> Método de Pago y Observaciones
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="MetodoPago" class="form-label">Método de Pago</label>
                            <input asp-for="MetodoPago" class="form-control" placeholder="Ej. Efectivo, Transferencia" />
                            <span asp-validation-for="MetodoPago" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label">Observaciones</label>
                            <input asp-for="Observaciones" class="form-control" placeholder="Comentarios adicionales..." />
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="delicia-section-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-dollar-sign me-2"></i> Totales
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Subtotal" class="form-label">Subtotal</label>
                                <input asp-for="Subtotal" class="form-control" />
                                <span asp-validation-for="Subtotal" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Iva" class="form-label">IVA</label>
                                <input asp-for="Iva" class="form-control" />
                                <span asp-validation-for="Iva" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Total" class="form-label">Total</label>
                                <input asp-for="Total" class="form-control" />
                                <span asp-validation-for="Total" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-delicia-outline">
                        <i class="fas fa-arrow-left me-2"></i> Regresar
                    </a>
                    <button type="submit" class="btn btn-delicia-primary px-4">
                        <i class="fas fa-save me-2"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}

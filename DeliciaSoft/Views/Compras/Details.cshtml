@model DeliciaSoft.Models.Compra

@{
    ViewData["Title"] = "Detalles de Compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/tablas.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-shopping-cart fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Detalles de Compra</h1>
                <p class="mb-0 small">Información detallada sobre la compra realizada</p>
            </div>
        </div>
        <div class="card-body">
            <div class="delicia-details">
                <dl class="row">
                    <dt class="col-sm-3">Fecha de Compra</dt>
                    <dd class="col-sm-9">@Model.FechaCompra?.ToShortDateString()</dd>

                    <dt class="col-sm-3">Fecha de Registro</dt>
                    <dd class="col-sm-9">@Model.FechaRegistro?.ToShortDateString()</dd>

                    <dt class="col-sm-3">Método de Pago</dt>
                    <dd class="col-sm-9">@Model.MetodoPago</dd>

                    <dt class="col-sm-3">Observaciones</dt>
                    <dd class="col-sm-9">@Model.Observaciones</dd>

                    <dt class="col-sm-3">Subtotal</dt>
                    <dd class="col-sm-9">@Model.Subtotal?.ToString("C")</dd>

                    <dt class="col-sm-3">IVA</dt>
                    <dd class="col-sm-9">@Model.Iva?.ToString("C")</dd>

                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">@Model.Total?.ToString("C")</dd>
                </dl>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-delicia-outline">
                    <i class="fas fa-arrow-left me-2"></i>Regresar
                </a>
            </div>
        </div>
    </div>
</div>

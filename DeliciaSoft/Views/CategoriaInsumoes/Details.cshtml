@model DeliciaSoft.Models.CategoriaInsumo

@{
    ViewData["Title"] = "Detalles de la Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-layer-group fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Detalles de Categoría de Insumo</h1>
                <p class="mb-0 small">Información detallada sobre la categoría registrada</p>
            </div>
        </div>

        <div class="card-body">
            <div class="delicia-details">
                <dl class="row">
                    <dt class="col-sm-3">Nombre de Categoría</dt>
                    <dd class="col-sm-9">@Model.NombreCategoria</dd>

                    <dt class="col-sm-3">Descripción</dt>
                    <dd class="col-sm-9">@Model.Descripcion</dd>

                    <dt class="col-sm-3">Fecha de Registro</dt>
                    <dd class="col-sm-9">@Model.FechaRegistro?.ToShortDateString()</dd>

                    <dt class="col-sm-3">Cantidad de Insumos</dt>
                    <dd class="col-sm-9">@Model.CantidadInsumos</dd>

                </dl>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-delicia-outline">
                    <i class="fas fa-arrow-left me-2"></i>Regresar
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.IdCategoriaInsumos" class="btn btn-delicia-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>

@model DeliciaSoft.ViewModels.Auth.RegistroViewModel

@{
    ViewData["Title"] = "Registro de Usuario";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row g-0">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg h-100">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <img src="/img/logo.png" alt="DeliciaSoft Logo" style="max-height: 60px;" class="mb-3" />
                        <h3 class="fw-bold">REGISTRARSE</h3>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <form asp-action="Registro" method="post" class="mt-3">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" autofocus />
                                    <label asp-for="Nombre">Nombre</label>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                                    <label asp-for="Apellido">Apellido</label>
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mt-3">
                            <input asp-for="Correo" class="form-control" placeholder="nombre@ejemplo.com" />
                            <label asp-for="Correo">Correo Electrónico</label>
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Contrasena" class="form-control" type="password" placeholder="Contraseña" />
                                    <label asp-for="Contrasena">Contraseña</label>
                                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ConfirmarContrasena" class="form-control" type="password" placeholder="Confirmar Contraseña" />
                                    <label asp-for="ConfirmarContrasena">Confirmar Contraseña</label>
                                    <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="TipoDocumento" class="form-select">
                                        <option value="">Seleccionar...</option>
                                        <option value="CC">Cédula de Ciudadanía</option>
                                        <option value="CE">Cédula de Extranjería</option>
                                        <option value="TI">Tarjeta de Identidad</option>
                                        <option value="Pasaporte">Pasaporte</option>
                                    </select>
                                    <label asp-for="TipoDocumento">Tipo de Documento</label>
                                    <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="NumeroDocumento" class="form-control" placeholder="Número de Documento" />
                                    <label asp-for="NumeroDocumento">Número de Documento</label>
                                    <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                    <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Celular" class="form-control" placeholder="Celular" />
                                    <label asp-for="Celular">Celular</label>
                                    <span asp-validation-for="Celular" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mt-3">
                            <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                            <label asp-for="Direccion">Dirección</label>
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Barrio" class="form-control" placeholder="Barrio" />
                                    <label asp-for="Barrio">Barrio</label>
                                    <span asp-validation-for="Barrio" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                                    <label asp-for="Ciudad">Ciudad</label>
                                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mt-3">
                            <select asp-for="IdRol" class="form-select" asp-items="ViewBag.IdRol">
                                <option value="">Seleccione un rol...</option>
                            </select>
                            <label asp-for="IdRol">Rol</label>
                            <span asp-validation-for="IdRol" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4 mb-3">
                            <button type="submit" class="btn btn-primary py-2">REGISTRARSE</button>
                        </div>

                        <div class="text-center mt-3">
                            <a class="text-decoration-none" asp-action="Login">¿Ya tienes una cuenta? Iniciar Sesión</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="auth-banner h-100">
                <h2>REGISTRARSE</h2>
                <p>¡Bienvenido a Delicias Darsy! Regístrate hoy y sé parte de una experiencia llena de sabor y calidad.</p>
                <a asp-action="Login" class="auth-banner-btn">INICIAR SESIÓN</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
@{
    ViewData["Title"] = "Cerrar Sesión";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Cerrar Sesión</h3>
                </div>
                <div class="card-body">
                    <p class="text-center">¿Estás seguro que deseas cerrar la sesión?</p>
                    <form asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Cerrar Sesión</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
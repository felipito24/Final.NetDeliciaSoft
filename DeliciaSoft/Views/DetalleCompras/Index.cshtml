@model IEnumerable<DeliciaSoft.Models.DetalleCompra>

<table class="table table-hover shadow-sm rounded-3 overflow-hidden" style="background-color: #fff0f8;">
    <thead style="background-color: #ff2d88; color: white;">
        <tr>
            <th class="text-center">Cantidad</th>
            <th class="text-center">Unidad de Medida</th>
            <th class="text-center">Producto</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Cantidad</td>
                    <td class="text-center">@item.UnidadMedida</td>
                    <td class="text-center">@item.IdCompraNavigation?.IdCompra</td>
                    <td class="text-center">@item.IdProductoNavigation?.NombreProducto</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdDetalle" class="btn btn-warning btn-sm rounded-pill me-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.IdDetalle" class="btn btn-danger btn-sm rounded-pill">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay detalles agregados todavía.</td>
            </tr>
        }
    </tbody>
</table>

@model DeliciaSoft.ViewModels.Rol.RolDetalleViewModel

@{
    ViewData["Title"] = "Detalles del Rol";
}

<div class="container-fluid">
    <h1 class="mt-4">Detalles del Rol</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
        <li class="breadcrumb-item active">Detalles</li>
    </ol>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-id-card me-1"></i>
                    Información del Rol
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.IdRol</dd>

                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>

                        <dt class="col-sm-3">Descripción:</dt>
                        <dd class="col-sm-9">@Model.Descripcion</dd>

                        <dt class="col-sm-3">Estado:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Estado)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.IdRol" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-key me-1"></i>
                    Permisos Asignados
                </div>
                <div class="card-body">
                    @if (Model.Permisos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th>Módulo</th>
                                        <th>Acción</th>
                                        <th>Descripción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var permiso in Model.Permisos)
                                    {
                                        <tr>
                                            <td>@permiso.Modulo</td>
                                            <td>@permiso.Accion</td>
                                            <td>@permiso.Descripcion</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Este rol no tiene permisos asignados.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
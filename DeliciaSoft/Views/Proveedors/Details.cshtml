@model DeliciaSoft.Models.Proveedor

@{
    ViewData["Title"] = "Detalles del Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-truck fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Detalles del Proveedor</h1>
                <p class="mb-0 small">Información detallada sobre el proveedor registrado</p>
            </div>
        </div>
        <div class="card-body">
            <div class="delicia-details">
                <dl class="row">
                    <dt class="col-sm-3">Tipo de Proveedor</dt>
                    <dd class="col-sm-9">@Model.TipoProveedor</dd>

                    <dt class="col-sm-3">Correo</dt>
                    <dd class="col-sm-9">@Model.Correo</dd>

                    <dt class="col-sm-3">Celular</dt>
                    <dd class="col-sm-9">@Model.Celular</dd>

                    <dt class="col-sm-3">Dirección</dt>
                    <dd class="col-sm-9">@Model.Direccion</dd>
                </dl>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-delicia-outline">
                    <i class="fas fa-arrow-left me-2"></i>Regresar
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.IdProveedor" class="btn btn-delicia-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>

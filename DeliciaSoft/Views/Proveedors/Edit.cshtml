@model DeliciaSoft.Models.Proveedor

@{
    ViewData["Title"] = "Editar proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-edit fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Editar Proveedor</h1>
                <p class="mb-0 small">Modifique los datos del proveedor</p>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="delicia-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdProveedor" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="delicia-section-card mb-4">
                            <div class="card-header">
                                <i class="fas fa-info-circle me-2"></i> Información del Proveedor
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="TipoProveedor" class="form-label">Tipo de Proveedor</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-truck"></i></span>
                                        <input asp-for="TipoProveedor" class="form-control" />
                                    </div>
                                    <span asp-validation-for="TipoProveedor" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Correo" class="form-label">Correo</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        <input asp-for="Correo" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Correo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Celular" class="form-label">Celular</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                        <input asp-for="Celular" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Celular" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Direccion" class="form-label">Dirección</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                        <input asp-for="Direccion" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Direccion" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-delicia-outline">
                        <i class="fas fa-arrow-left me-2"></i>Regresar
                    </a>
                    <button type="submit" class="btn btn-delicia-primary">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

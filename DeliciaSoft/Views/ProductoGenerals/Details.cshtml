@model DeliciaSoft.Models.ProductoGeneral

@{
    ViewData["Title"] = "Detalles de Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-box fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Detalles de Producto</h1>
                <p class="mb-0 small">Información completa del producto</p>
            </div>
        </div>
        <div class="card-body">
            <div class="delicia-details">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.NombreProducto)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.NombreProducto)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.PrecioProducto)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.PrecioProducto)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.CantidadProducto)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CantidadProducto)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.IdCategoriaProductoNavigation)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.IdCategoriaProductoNavigation.IdCategoriaProducto)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Estado)
                    </dt>
                    <dd class="col-sm-9">
                        @if (Model.Estado == true)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-delicia-outline">
                    <i class="fas fa-arrow-left me-2"></i>Regresar
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.IdProductoGeneral" class="btn btn-delicia-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>
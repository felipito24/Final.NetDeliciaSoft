@model DeliciaSoft.Models.ProductoGeneral

@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-edit fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Editar Producto</h1>
                <p class="mb-0 small">Modifique los datos del producto</p>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="delicia-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdProductoGeneral" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="delicia-section-card mb-4">
                            <div class="card-header">
                                <i class="fas fa-info-circle me-2"></i> Información del Producto
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="NombreProducto" class="form-label">Nombre del Producto</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                        <input asp-for="NombreProducto" class="form-control" placeholder="Ingrese nombre del producto" />
                                    </div>
                                    <span asp-validation-for="NombreProducto" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="IdCategoriaProducto" class="form-label">Categoría</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-folder"></i></span>
                                        <select asp-for="IdCategoriaProducto" class="form-select" asp-items="ViewBag.IdCategoriaProducto"></select>
                                    </div>
                                    <span asp-validation-for="IdCategoriaProducto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="delicia-section-card mb-4">
                            <div class="card-header">
                                <i class="fas fa-dollar-sign me-2"></i> Precio y Stock
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="PrecioProducto" class="form-label">Precio</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                        <input asp-for="PrecioProducto" class="form-control" placeholder="0.00" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="PrecioProducto" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CantidadProducto" class="form-label">Cantidad en Stock</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-cubes"></i></span>
                                        <input asp-for="CantidadProducto" class="form-control" placeholder="0" type="number" />
                                    </div>
                                    <span asp-validation-for="CantidadProducto" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="delicia-section-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-cog me-2"></i> Configuración
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label">Estado</label>
                            <div class="form-check form-switch">
                                <input asp-for="Estado" class="form-check-input" />
                                <label class="form-check-label" for="Estado">Producto activo</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-delicia-outline">
                        <i class="fas fa-arrow-left me-2"></i>Regresar
                    </a>
                    <button type="submit" class="btn btn-delicia-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Form validation
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        });
    </script>
}
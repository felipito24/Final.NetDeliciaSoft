@model DeliciaSoft.Models.ProductoPersonalizado

@{
    ViewData["Title"] = "Editar Producto Personalizado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-edit fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Editar Producto Personalizado</h1>
                <p class="mb-0 small">Modifique los datos del producto personalizado</p>
            </div>
        </div>
        <div class="card-body">
            <form id="formEditar" asp-action="Edit" class="delicia-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdProductoPersonalizado" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="delicia-section-card mb-4">
                            <div class="card-header">
                                <i class="fas fa-info-circle me-2"></i> Información del Producto
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="IdProducto" class="form-label">Producto</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-box"></i></span>
                                        <select asp-for="IdProducto" class="form-select" asp-items="ViewBag.IdProducto"></select>
                                    </div>
                                    <span asp-validation-for="IdProducto" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Cantidad" class="form-label">Cantidad</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-cubes"></i></span>
                                        <input asp-for="Cantidad" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Total" class="form-label">Total</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                        <input asp-for="Total" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Total" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="delicia-section-card mb-4">
                            <div class="card-header">
                                <i class="fas fa-paint-brush me-2"></i> Personalización
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Decoracion" class="form-label">Decoración</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-gift"></i></span>
                                        <input asp-for="Decoracion" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Decoracion" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TemasOmotivos" class="form-label">Temas o Motivos</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-images"></i></span>
                                        <input asp-for="TemasOmotivos" class="form-control" />
                                    </div>
                                    <span asp-validation-for="TemasOmotivos" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Toppings" class="form-label">Toppings</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-concierge-bell"></i></span>
                                        <select asp-for="Toppings" class="form-select" asp-items="ViewBag.Toppings"></select>
                                    </div>
                                    <span asp-validation-for="Toppings" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Mensaje" class="form-label">Mensaje</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-comment-alt"></i></span>
                                        <input asp-for="Mensaje" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DisenioPersonalizado" class="form-label">Diseño Personalizado</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-palette"></i></span>
                                        <input asp-for="DisenioPersonalizado" class="form-control" />
                                    </div>
                                    <span asp-validation-for="DisenioPersonalizado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-delicia-outline">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la Lista
                    </a>
                    <button type="submit" class="btn btn-delicia-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Form validation
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        });
    </script>
}

@model DeliciaSoft.Models.ProductoPersonalizado

@{
    ViewData["Title"] = "Detalles del Producto Personalizado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-birthday-cake fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Detalles del Producto Personalizado</h1>
                <p class="mb-0 small">Información completa del producto personalizado</p>
            </div>
        </div>
        <div class="card-body">
            <div class="delicia-details">
                <dl class="row">
                    <dt class="col-sm-3">Nombre del Producto</dt>
                    <dd class="col-sm-9">@Model.IdProductoNavigation.NombreProducto</dd>

                    <dt class="col-sm-3">Cantidad</dt>
                    <dd class="col-sm-9">@Model.Cantidad</dd>

                    <dt class="col-sm-3">Precio Total</dt>
                    <dd class="col-sm-9">@Model.Total</dd>

                    <dt class="col-sm-3">Temas o Motivos</dt>
                    <dd class="col-sm-9">@Model.TemasOmotivos</dd>

                    <dt class="col-sm-3">Decoración</dt>
                    <dd class="col-sm-9">@Model.Decoracion</dd>

                    <dt class="col-sm-3">Diseño Personalizado</dt>
                    <dd class="col-sm-9">@Model.DisenioPersonalizado</dd>

                    <dt class="col-sm-3">Mensaje</dt>
                    <dd class="col-sm-9">@Model.Mensaje</dd>

                    <dt class="col-sm-3">Topping</dt>
                    <dd class="col-sm-9">@Model.ToppingsNavigation?.NombreInsumo</dd>
                </dl>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-delicia-outline">
                    <i class="fas fa-arrow-left me-2"></i>Regresar
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.IdProductoPersonalizado" class="btn btn-delicia-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>

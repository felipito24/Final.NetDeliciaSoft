@model DeliciaSoft.Models.ProductoPersonalizado

@{
    ViewData["Title"] = "Crear Producto Personalizado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-gradient-primary text-white py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-cogs fa-2x me-3"></i>
                <div>
                    <h1 class="fs-4 mb-0">Crear Producto Personalizado</h1>
                    <p class="mb-0 small">Complete el formulario para registrar un producto personalizado</p>
                </div>
            </div>
        </div>
        <div class="card-body pt-4">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <i class="fas fa-box fa-2x me-2"></i> Información del Producto
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="IdProducto" class="form-label">Producto</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-box"></i></span>
                                        <select asp-for="IdProducto" class="form-select" asp-items="ViewBag.IdProducto">
                                            <option value="">Seleccione un producto</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="IdProducto" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Cantidad" class="form-label">Cantidad</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-cubes"></i></span>
                                        <input asp-for="Cantidad" class="form-control" placeholder="Ingrese cantidad" />
                                    </div>
                                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Decoracion" class="form-label">Decoración</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-paint-brush"></i></span>
                                        <input asp-for="Decoracion" class="form-control" placeholder="Ingrese decoración" />
                                    </div>
                                    <span asp-validation-for="Decoracion" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TemasOmotivos" class="form-label">Temas y Motivos</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-heart"></i></span>
                                        <input asp-for="TemasOmotivos" class="form-control" placeholder="Ingrese temas o motivos" />
                                    </div>
                                    <span asp-validation-for="TemasOmotivos" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <i class="fas fa-cogs me-2"></i> Configuración Adicional
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Toppings" class="form-label">Toppings</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-cookie"></i></span>
                                        <select asp-for="Toppings" class="form-select" asp-items="ViewBag.Toppings">
                                            <option value="">Seleccione toppings</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="Toppings" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Mensaje" class="form-label">Mensaje</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-comment"></i></span>
                                        <input asp-for="Mensaje" class="form-control" placeholder="Ingrese mensaje" />
                                    </div>
                                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DisenioPersonalizado" class="form-label">Diseño Personalizado</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-image"></i></span>
                                        <input asp-for="DisenioPersonalizado" class="form-control" placeholder="Ingrese diseño personalizado" />
                                    </div>
                                    <span asp-validation-for="DisenioPersonalizado" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Total" class="form-label">Total</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                        <input asp-for="Total" class="form-control" placeholder="0.00" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="Total" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Form validation
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        });
    </script>
}

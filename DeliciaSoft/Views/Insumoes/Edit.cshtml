@model DeliciaSoft.Models.Insumo

@{
    ViewData["Title"] = "Actualizar insumo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-edit fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Editar Insumo</h1>
                <p class="mb-0 small">Modifique los datos del insumo</p>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="delicia-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdInsumo" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="delicia-section-card mb-4">
                            <div class="card-header">
                                <i class="fas fa-info-circle me-2"></i> Información del Insumo
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="NombreInsumo" class="form-label">Nombre Insumo</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-cogs"></i></span>
                                        <input asp-for="NombreInsumo" class="form-control" />
                                    </div>
                                    <span asp-validation-for="NombreInsumo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="IdCategoriaInsumos" class="form-label">Categoría</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                        <select asp-for="IdCategoriaInsumos" asp-items="ViewBag.IdCategoriaInsumos" class="form-control"></select>
                                    </div>
                                    <span asp-validation-for="IdCategoriaInsumos" class="text-danger"></span>
                                </div>

                                <div class="mb-3 row">
                                    <div class="col">
                                        <label asp-for="Cantidad" class="form-label">Cantidad</label>
                                        <input asp-for="Cantidad" class="form-control" />
                                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                                    </div>
                                    <div class="col">
                                        <label asp-for="UnidadMedida" class="form-label">Unidad de medida</label>
                                        <input asp-for="UnidadMedida" class="form-control" />
                                        <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Marca" class="form-label">Marca</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-apple-alt"></i></span>
                                        <input asp-for="Marca" class="form-control" />
                                    </div>
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Imagen" class="form-label">Imagen</label>
                                    <input asp-for="Imagen" type="file" class="form-control" />
                                    <span asp-validation-for="Imagen" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-delicia-outline">
                        <i class="fas fa-arrow-left me-2"></i>Regresar
                    </a>
                    <button type="submit" class="btn btn-delicia-primary">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

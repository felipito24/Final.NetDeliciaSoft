@model DeliciaSoft.Models.Insumo

@{
    ViewData["Title"] = "Detalles del Insumo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-cubes fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Detalles del Insumo</h1>
                <p class="mb-0 small">Información detallada sobre el insumo y sus características</p>
            </div>
        </div>

        <div class="card-body">
            <div class="delicia-details">
                <dl class="row">
                    <dt class="col-sm-3">Nombre del Insumo</dt>
                    <dd class="col-sm-9">@Model.NombreInsumo</dd>

                    <dt class="col-sm-3">Categoría</dt>
                    <dd class="col-sm-9">@Model.IdCategoriaInsumosNavigation?.NombreCategoria</dd>

                    <dt class="col-sm-3">Cantidad</dt>
                    <dd class="col-sm-9">@Model.Cantidad (buena) X - 5 (baja)</dd>

                    <dt class="col-sm-3">Unidad de Medida</dt>
                    <dd class="col-sm-9">@Model.UnidadMedida</dd>

                    <dt class="col-sm-3">Marca</dt>
                    <dd class="col-sm-9">@Model.Marca</dd>

                    <dt class="col-sm-3">Imagen</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Imagen))
                        {
                            <img src="~/img/@Model.Imagen" alt="Imagen" class="img-fluid rounded shadow-sm" style="max-height: 200px;" />
                        }
                        else
                        {
                            <span>Sin imagen</span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-delicia-outline">
                    <i class="fas fa-arrow-left me-2"></i>Regresar
                </a>
                <a asp-action="Edit" asp-route-id="@Model?.IdInsumo" class="btn btn-delicia-primary">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            </div>
        </div>
    </div>
</div>

@model DeliciaSoft.Models.Insumo

@{
    ViewData["Title"] = "Crear Insumo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-gradient-primary text-white py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-cogs fa-2x me-3"></i>
                <div>
                    <h1 class="fs-4 mb-0">Registrar Insumo</h1>
                    <p class="mb-0 small">Complete el formulario para registrar un insumo</p>
                </div>
            </div>
        </div>
        <div class="card-body pt-4">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <i class="fas fa-box fa-2x me-2"></i> Información del Insumo
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="NombreInsumo" class="form-label">Nombre del Insumo</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-cube"></i></span>
                                        <input asp-for="NombreInsumo" class="form-control" placeholder="Ingrese nombre del insumo" />
                                    </div>
                                    <span asp-validation-for="NombreInsumo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="IdCategoriaInsumos" class="form-label">Categoría</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-tags"></i></span>
                                        <select asp-for="IdCategoriaInsumos" class="form-select" asp-items="ViewBag.IdCategoriaInsumos">
                                            <option value="">Seleccione una categoría</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="IdCategoriaInsumos" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Marca" class="form-label">Marca</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-trademark"></i></span>
                                        <input asp-for="Marca" class="form-control" placeholder="Ingrese marca" />
                                    </div>
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card mb-4 border-0 shadow-sm">
                            <div class="card-header bg-light">
                                <i class="fas fa-cogs me-2"></i> Configuración Adicional
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Cantidad" class="form-label">Cantidad</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-cubes"></i></span>
                                        <input asp-for="Cantidad" class="form-control" placeholder="Ingrese cantidad" />
                                    </div>
                                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UnidadMedida" class="form-label">Unidad de Medida</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-ruler"></i></span>
                                        <input asp-for="UnidadMedida" class="form-control" placeholder="Ingrese unidad de medida" />
                                    </div>
                                    <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Imagen" class="form-label">Imagen</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-image"></i></span>
                                        <input asp-for="Imagen" class="form-control" type="file" />
                                    </div>
                                    <span asp-validation-for="Imagen" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Estado</label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="Estado" name="Estado" value="true" />
                                        <label class="form-check-label" for="Estado">Activo</label>
                                    </div>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-save me-2"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Form validation
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        });
    </script>
}

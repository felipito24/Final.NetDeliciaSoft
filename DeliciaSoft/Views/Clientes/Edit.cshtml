@model DeliciaSoft.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="delicia-card">
        <div class="card-header d-flex align-items-center">
            <i class="fas fa-user-edit fa-2x me-3"></i>
            <div>
                <h1 class="h3 mb-0">Editar Cliente</h1>
                <p class="mb-0 small">Modifique los datos del cliente</p>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="delicia-form needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdCliente" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="delicia-section-card mb-4">
                            <div class="card-header">
                                <i class="fas fa-id-card me-2"></i> Datos Personales
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Nombre" class="form-label">Nombre</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre" />
                                        </div>
                                        <span asp-validation-for="Nombre" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Apellido" class="form-label">Apellido</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input asp-for="Apellido" class="form-control" placeholder="Ingrese apellido" />
                                        </div>
                                        <span asp-validation-for="Apellido" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="TipoDocumento" class="form-label">Tipo de documento</label>
                                        <select asp-for="TipoDocumento" class="form-select">
                                            <option value="">Seleccione</option>
                                            <option value="CC">Cédula de Ciudadanía</option>
                                            <option value="CE">Cédula de Extranjería</option>
                                            <option value="TI">Tarjeta de Identidad</option>
                                            <option value="PP">Pasaporte</option>
                                        </select>
                                        <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="NumeroDocumento" class="form-label">Número de documento</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                            <input asp-for="NumeroDocumento" class="form-control" placeholder="Ingrese número" />
                                        </div>
                                        <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                            <input asp-for="FechaNacimiento" type="date" class="form-control" />
                                        </div>
                                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Celular" class="form-label">Celular</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-mobile-alt"></i></span>
                                            <input asp-for="Celular" class="form-control" placeholder="Ingrese celular" />
                                        </div>
                                        <span asp-validation-for="Celular" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="delicia-section-card mb-4">
                            <div class="card-header">
                                <i class="fas fa-lock me-2"></i> Datos de Acceso
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Correo" class="form-label">Correo electrónico</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        <input asp-for="Correo" type="email" class="form-control" placeholder="correo@ejemplo.com" />
                                    </div>
                                    <span asp-validation-for="Correo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Contrasena" class="form-label">Contraseña</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        <input asp-for="Contrasena" type="password" class="form-control" />
                                        <button class="btn btn-outline-secondary toggle-password" type="button">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <div class="form-text">La contraseña debe tener al menos 8 caracteres.</div>
                                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label">Estado</label>
                                    <div class="form-check form-switch">
                                        <input asp-for="Estado" class="form-check-input" />
                                        <label class="form-check-label" for="Estado">Cliente activo</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="delicia-section-card mb-4">
                    <div class="card-header">
                        <i class="fas fa-map-marker-alt me-2"></i> Dirección
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Direccion" class="form-label">Dirección</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-home"></i></span>
                                    <input asp-for="Direccion" class="form-control" placeholder="Calle, Carrera, Avenida" />
                                </div>
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Barrio" class="form-label">Barrio</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map"></i></span>
                                    <input asp-for="Barrio" class="form-control" placeholder="Ingrese barrio" />
                                </div>
                                <span asp-validation-for="Barrio" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Ciudad" class="form-label">Ciudad</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                    <input asp-for="Ciudad" class="form-control" placeholder="Ingrese ciudad" />
                                </div>
                                <span asp-validation-for="Ciudad" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-delicia-outline">
                        <i class="fas fa-arrow-left me-2"></i>Regresar
                    </a>
                    <button type="submit" class="btn btn-delicia-primary">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('.toggle-password').click(function() {
                var input = $(this).parent().find('input');
                var icon = $(this).find('i');

                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Form validation
            (function () {
                'use strict'
                var forms = document.querySelectorAll('.needs-validation')
                Array.prototype.slice.call(forms)
                    .forEach(function (form) {
                        form.addEventListener('submit', function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault()
                                event.stopPropagation()
                            }
                            form.classList.add('was-validated')
                        }, false)
                    })
            })()
        });
    </script>
}